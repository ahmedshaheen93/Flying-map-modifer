<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="536.0" prefWidth="763.0" stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shaheen.contoller.MainViewController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane id="title-pane" prefHeight="96.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button layoutX="555.0" layoutY="33.0" mnemonicParsing="false" onAction="#selectFile" text="..."
                                AnchorPane.rightAnchor="14.0"/>
                        <Label layoutX="14.0" layoutY="35.0" text="File Path" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="filePathTextField" editable="false" layoutX="95.0" layoutY="33.0"
                                   prefHeight="26.0" prefWidth="459.0" AnchorPane.leftAnchor="95.0"
                                   AnchorPane.rightAnchor="46.0"/>
                    </children>
                </AnchorPane>
            </top>
            <left>
                <AnchorPane prefHeight="304.0" prefWidth="31.0" BorderPane.alignment="CENTER"/>
            </left>
            <right>
                <AnchorPane prefHeight="304.0" prefWidth="30.0" BorderPane.alignment="CENTER"/>
            </right>
            <bottom>
                <AnchorPane prefHeight="42.0" prefWidth="779.0" BorderPane.alignment="CENTER"/>
            </bottom>
            <center>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="searchText" layoutX="70.0" layoutY="14.0" prefHeight="26.0" prefWidth="308.0"
                                   promptText="X, Y, Z  Or Type" AnchorPane.leftAnchor="70.0"
                                   AnchorPane.topAnchor="14.0"/>
                        <Label layoutX="14.0" layoutY="19.0" text="Search" AnchorPane.leftAnchor="14.0"
                               AnchorPane.topAnchor="19.0"/>
                        <TableView fx:id="flyingTable" layoutX="14.0" layoutY="69.0" prefHeight="200.0"
                                   prefWidth="682.0" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0"
                                   onMouseClicked="#onTableClicked">
                            <columns>
                                <TableColumn prefWidth="75.0" text="X" fx:id="x"/>
                                <TableColumn fx:id="y" prefWidth="75.0" text="Y"/>
                                <TableColumn fx:id="z" prefWidth="75.0" text="Z"/>
                                <TableColumn fx:id="type" prefWidth="75.0" text="Type"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
